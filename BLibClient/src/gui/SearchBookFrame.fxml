<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SearchBookFrameController">
   <children>
      <Label layoutX="20.0" layoutY="20.0" text="Search Book" styleClass="label" />
      <ComboBox fx:id="searchOptions" layoutX="150.0" layoutY="20.0" prefWidth="200.0" />
      <TextField fx:id="searchField" layoutX="150.0" layoutY="60.0" prefWidth="300.0" promptText="Enter search text" />
      <Button fx:id="btnSearch" layoutX="470.0" layoutY="60.0" mnemonicParsing="false" onAction="#handleSearchAction" text="Search" styleClass="button" />

      <!-- TableView for displaying books -->
      <TableView fx:id="booksTable" layoutX="20.0" layoutY="120.0" prefHeight="250.0" prefWidth="560.0">
         <columns>
            <TableColumn fx:id="colBookName" text="Book Name" prefWidth="150.0" />
            <TableColumn fx:id="colCategory" text="Category" prefWidth="100.0" />
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" />
            <TableColumn fx:id="colLocation" text="Location" prefWidth="100.0" />
            <TableColumn fx:id="colReturnDate" text="Closest Return Date" prefWidth="110.0" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
