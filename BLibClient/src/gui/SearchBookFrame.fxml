<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="250.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SearchBookFrameController">
   <children>
      <Label layoutX="20.0" layoutY="30.0" text="Search By" />
      <ComboBox fx:id="searchOptions" layoutX="100.0" layoutY="25.0" prefWidth="150.0" />
      <Label layoutX="20.0" layoutY="80.0" text="Search Text" />
      <TextField fx:id="searchField" layoutX="100.0" layoutY="75.0" prefWidth="150.0" promptText="Enter search text" />
      <Button fx:id="btnSearch" layoutX="100.0" layoutY="130.0" mnemonicParsing="false" onAction="#handleSearchAction" text="Search" />
   </children>
</AnchorPane>
